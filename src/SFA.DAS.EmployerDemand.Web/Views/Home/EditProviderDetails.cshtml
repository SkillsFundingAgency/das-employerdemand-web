@{
    Layout = "_LayoutProvider";
    ViewData["Title"] = "Edit contact details";
    ViewData["Description"] = "Edit the training providerâ€™s email address, telephone number or website.";
}
<main class="govuk-main-wrapper govuk-main-wrapper--auto-spacing" id="main-content">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-xl">Edit [provider name]'s contact details</h1>
            <p>We'll share these with the employers you're showing interest in, so they can contact you about [standard name] (level [standard level]).</p>
            <form method="POST">
                <div class="govuk-form-group">
                    <label class="govuk-label govuk-label--m" for="provider-email">
                        Email address
                    </label>
                    <input class="govuk-input govuk-input--width-20 " id="provider-email" name="provider-email" type="email" autocomplete="email" value="">
                </div>
                <div class="govuk-form-group">
                    <label class="govuk-label govuk-label--m" for="provider-telephone">
                        Telephone number
                    </label>
                    <input class="govuk-input govuk-input--width-20 " id="provider-telephone" name="provider-telephone" type="tel" autocomplete="tel" value="">
                </div>
                <div class="govuk-form-group">
                    <label class="govuk-label govuk-label--m" for="provider-website">
                        Website (optional)
                    </label>
                    <input class="govuk-input govuk-input--width-20" id="provider-website" name="provider-website" type="text" value="">
                </div>
                <button class="govuk-button" data-module="govuk-button">Continue</button>
            </form>
        </div>
    </div>
</main>
